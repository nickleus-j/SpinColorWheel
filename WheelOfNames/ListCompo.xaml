<UserControl x:Class="WheelOfNames.ListCompo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WheelOfNames"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500" FontFamily="Segoe UI">
    <UserControl.Resources>
        <SolidColorBrush x:Key="ZuneBackground" Color="#FF1C1C1C"/>
        <SolidColorBrush x:Key="ZuneForeground" Color="White"/>
        <SolidColorBrush x:Key="ZuneDarkForeground" Color="#FF1C1C1C"/>
        <SolidColorBrush x:Key="ZuneAccent" Color="#AD9900"/>
    </UserControl.Resources>
    <StackPanel>
        <Label Content="Enter Names Here" 
           FontSize="32"
           Foreground="{StaticResource ZuneDarkForeground}" FontFamily="Segoe UI Semibold"></Label>
        <TextBox x:Name="StringBox" FontSize="14" KeyUp="StringBox_KeyUp" FontFamily="Segoe UI Semibold"></TextBox>
        <Button Background="Transparent"
        Foreground="{StaticResource ZuneAccent}"
        FontSize="18"
        BorderThickness="0" x:Name="Add" Content="Add Name" Click="AddNameButton_Click" Margin="0,10,0,5" ></Button>
        <ListBox x:Name="NamesBox" MinHeight="50" Margin="0,0,0,10"  ItemsSource="{Binding NameItems,Mode=TwoWay}" Background="{StaticResource ZuneBackground}" KeyUp="NamesBox_KeyUp">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBox Text="{Binding Value,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="2" Background="{StaticResource ZuneForeground}" FontSize="16"
                      FontFamily="Segoe UI"  Foreground="{StaticResource ZuneDarkForeground}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="Remove" Content="Remove Name" Click="RemoveNameButton_Click" Margin="0,10,0,5"  Background="Transparent"
        Foreground="{StaticResource ZuneAccent}"
        FontSize="18"></Button>
    </StackPanel>
</UserControl>
