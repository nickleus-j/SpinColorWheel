<Window x:Class="WheelOfNames.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WheelOfNames"
        mc:Ignorable="d"
        Title="Wheel of Names" Height="500" Width="600">
    <Grid>
        <Canvas x:Name="WheelCanvas" Width="400" Height="400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Canvas.RenderTransform>
                <RotateTransform x:Name="WheelRotate" CenterX="200" CenterY="200"/>
            </Canvas.RenderTransform>
        </Canvas>

        

        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button Content="Spin" Width="100" Height="40" Click="Spin_Click"/>
            <Label x:Name="ResultLabel" FontSize="16" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
